<div class="page-width">
  <h2 class="text-center mb-10">Slider Section</h2>
  <div class="your-class !flex items-center w-full [&>div]:w-full">
    {% content_for 'blocks' %}
  </div>
</div>

{% javascript %}
    jQuery(document).ready(function(){
      $(".your-class").slick({
        prevArrow: '<button class="slide-arrow prev-arrow mr-10"><svg class="w-6 h-6 text-gray-800" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24"><path fill-rule="evenodd" d="M13.729 5.575c1.304-1.074 3.27-.146 3.27 1.544v9.762c0 1.69-1.966 2.618-3.27 1.544l-5.927-4.881a2 2 0 0 1 0-3.088l5.927-4.88Z" clip-rule="evenodd"/></svg></button>',
        nextArrow: '<button class="slide-arrow next-arrow ml-10"><svg class="w-6 h-6 text-gray-800" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24"><path fill-rule="evenodd" d="M10.271 5.575C8.967 4.501 7 5.43 7 7.12v9.762c0 1.69 1.967 2.618 3.271 1.544l5.927-4.881a2 2 0 0 0 0-3.088l-5.927-4.88Z" clip-rule="evenodd"/></svg></button>'
      });
  });
{% endjavascript %}

{% schema %}
{
  "name": "Slider",
  "tag": "section",
  "class": "py-10",
  "blocks": [{"type": "SlideOne"}, {"type": "SlideTwo"}],
  "settings": [],
  "presets": [{
    "name": "Slider"
  }]
}
{% endschema %}

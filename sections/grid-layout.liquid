<div class="page-width">
  <h2 class="text-center mb-4">{{ section.settings.heading }}</h2>
  <div class="text-center mb-10">{{ section.settings.description }}</div>
  <div class="!grid !grid-cols-4 !grid-rows-2 gap-x-0 gap-y-0">
    {% for block in section.blocks %}
      {% if block.settings.image %}
        <div
          class="
            {% if block.settings.vertical_alignment == '50%' %}
              col-span-2 row-span-2
            {% endif %}
          "
        >
          <img
            src="{{ block.settings.image | image_url: width: '800px' }}"
            class="block object-cover w-full h-full aspect-square"
          >
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Grid Layout",
  "tag": "section",
  "class": "py-20",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Title"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Select Image",
      "limit": 5,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Select Image",
        },
        {
        "type": "select",
        "id": "vertical_alignment",
        "label": "Vertical alignment",
        "options": [
          {
            "value": "25%",
            "label": "25%"
          },
          {
            "value": "50%",
            "label": "50%"
          },
        ],
        "default": "25%"
      },
      ]
    },
  ],
  "presets": [{
    "name": "Grid Layout"
  }]
}
{% endschema %}

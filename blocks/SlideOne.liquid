<div
  href="#"
  class="flex flex-col items-center rounded-lg shadow-sm md:flex-row border border-black bg-white max-w-[768px] w-full mx-auto"
>
  {% if block.settings.image %}
    <img
      src="{{ block.settings.image | image_url: width: '300px' }}"
      class="object-cover rounded-t-lg md:h-auto md:rounded-none md:rounded-s-lg"
    >
  {% endif %}
  <div class="flex flex-col justify-between p-4 leading-normal grow">
    <h5 class="mb-2 !text-4xl font-bold tracking-tight text-gray-100">{{ block.settings.heading }}</h5>
    <div class="mb-3 font-normal text-gray-100">
      {% content_for 'blocks' %}
    </div>
    <div>
      <a
        href="#"
        class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300"
      >
        Read more
        <svg
          class="rtl:rotate-180 w-3.5 h-3.5 ms-2"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 14 10"
        >
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
        </svg>
      </a>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "SlideOne",
  "blocks": [{"type": "description"}],
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
  ],
  "presets": [
    {
      "name": "SlideOne",
    }
  ]
}
{% endschema %}

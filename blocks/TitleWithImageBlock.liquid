<div class="max-w-sm bg-white border border-gray-200 rounded-lg shadow-sm">
  {% if block.settings.image %}
    <img src="{{ block.settings.image | image_url: width: '300px' }}" class="block">
  {% endif %}

  <div class="p-5">
    <a href="#">
      <h3 class="mb-2 text-4xl font-bold tracking-tight text-gray-900">{{ block.settings.heading }}</h3>
    </a>
    <div class="font-normal text-xl text-gray-700 ">
      {% content_for 'blocks' %}
    </div>
  </div>
</div>

{% comment %}
  "blocks": [{ "type": "@theme" }, { "type": "@app" }],
  {% content_for 'blocks' %}
{% endcomment %}

{% schema %}
{
  "name": "Title With Image Block",
  "blocks": [{"type": "description"}],
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
  ],
  "presets": [
    {
      "name": "Title Image Content Block",
    }
  ]
}
{% endschema %}

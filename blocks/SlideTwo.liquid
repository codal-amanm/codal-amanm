<div class=" bg-gray-100 border border-gray-200 rounded-lg shadow-sm flex items-center max-w-[768px] w-full mx-auto">
  {% if block.settings.image %}
    <img src="{{ block.settings.image | image_url: width: '300px' }}" class="block">
  {% endif %}

  <div class="p-20 flex-grow">
    <a href="#">
      <h3 class="mb-2 text-4xl font-bold tracking-tight text-gray-900">{{ block.settings.heading }}</h3>
    </a>
    {% content_for 'blocks' %}
  </div>
</div>
{% schema %}
{
  "name": "SlideTwo",
  "blocks": [{"type": "ImageTitleContent"}],
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
  ],
  "presets": [
    {
      "name": "SlideTwo",
    }
  ]
}
{% endschema %}
